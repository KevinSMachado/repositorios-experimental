@using Newtonsoft.Json
@using TK_ENERGY_GP_PORTAL.Models.DTO

@{
    ViewData["Title"] = "GeneracionMasiva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var funcionarioLoggedIn = Context.Request.HttpContext.Session.GetString("funcionario");
    var funcionario = JsonConvert.DeserializeObject<UserCredentialsDto>(funcionarioLoggedIn);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generacion masiva de tokens</title>
    @*  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> *@
    <link rel="stylesheet" href="~/css/fontAwesome/css/all.css" asp-append-version="true" />


    @*  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@
    <link rel="stylesheet" href="~/css/bootstrap5.min.css" asp-append-version="true" />


    @* <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css"> *@
    <link rel="stylesheet" href="~/css/dataTables.bootstrap5.min.css" asp-append-version="true" />


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    @*  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css"> *@
    <link rel="stylesheet" href="~/css/responsive.dataTables.min.css" asp-append-version="true" />



    @*  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css"> *@
    <link rel="stylesheet" href="~/css/chosen.min.css" asp-append-version="true" />

</head>
<body>
    <div id="loadingOverlay" class="loader-overlay"></div>
    <div id="loadingScreen" class="loader"></div>
    <div class="container">
        <div class="content">
            <div class="card rounded-0 br-general-card">
                <div class="card-body mg-20px" >
                    <h2 class="txt-forest-green text-center">Generación masiva de tokens</h2>
                    <div class="row mg-top-30px">
                        <div class="col-12 text-center">
                            <h5> Si no cuenta con el formato, presione click en <a asp-controller="Token" asp-action="descargarFormatoGeneracionTokens" class="txt-forest-green">descargar</a></h5>
                        </div>
                        <div class="col-12 mg-top-20px">
                            <form id="archivoForm" asp-action="cargarArchivo" asp-controller="Token" method="post">

                                <label for="descripcionSolicitud">
                                    <h5>Nombre o descripción de la solicitud <span class="color-red">*</span></h5>
                                </label>
                                <input type="text" id="descripcionSolicitud" required class="form-control form-control-lg br-ip-lemon-green mb-1" placeholder ="Solicitud"/>


                                <label for="archivo">
                                    <h5>Selecciona el archivo a cargar, solo se admite formato excel  <span class="color-red">*</span></h5>
                                </label>
                                <div class="input-group mb-3">
                                    <input accept=".xls,.xlsx" id="archivoMedidores" name="archivo" type="file" required class="form-control form-control-lg br-ip-lemon-green" placeholder="Selecciona un archivo">
                                    <button class="btn btn-lg btn-lemon-green" type="submit" id="subirArchivoMedidores"><i class="fa-solid fa-arrow-up-from-bracket"></i></button>
                                </div>

                                <div id="removerTabla" class="col-lg-12 col-md-12 mb-3 display-none">
                                    
                                    <button type="button" onclick="removerTabla()" class="btn-lg btn btn-secondary w-100">Remover tabla <i class="fa-solid fa-table"></i></button>
                                </div>

                                <div class="col-12">
                                    <table id="tablaMedidoresCargados" class="table table-bordered dt-responsive nowrap w-100" cellspacing="0" >
                                        <thead class="thead-tea-green">
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </form>
                        </div>

                        <div class="col-12 display-none" id="tiposTokenAGenerar">


                            <label for="tiposToken">
                                <h5>Selecciona los tipos de token a generar </h5>
                            </label>
                            <select id="tiposTokenSelector" class="chosen form-control br-ip-lemon-green" multiple>

                                @if (funcionario.Funcionario.Permisos.Find(e => (e.Nombre == "CrearTokensBorradoCredito" && e.Estado != true)) == null)
                                {
                                    <option value="ClearCredit">Borrar crédito</option>
                                }

                                @if (funcionario.Funcionario.Permisos.Find(e => (e.Nombre == "CrearTokensPosAPre" && e.Estado == true)) != null)
                                {
                                    <option value="PrePayment">Cambiar a prepago</option>
                                }

                                @if (funcionario.Funcionario.Permisos.Find(e => (e.Nombre == "CrearTokensPreAPos" && e.Estado == true)) != null)
                                {
                                    <option value="PostPayment">Cambiar a postpago</option>
                                }

                                @if (funcionario.Funcionario.Permisos.Find(e => (e.Nombre == "CrearTokensDesbloqueo" && e.Estado == true)) != null)
                                {
                                    <option value="ClearTamper">Desbloqueo</option>
                                }

                                @if (funcionario.Funcionario.Permisos.Find(e => (e.Nombre == "CrearTokensOpenRelay" && e.Estado == true)) != null)
                                {
                                    <option value="OpenRelay">Abrir Relay</option>
                                }

                                @if (funcionario.Funcionario.Permisos.Find(e => (e.Nombre == "CrearTokensCloseRelay" && e.Estado == true)) != null)
                                {
                                    <option value="CloseRelay">Cerrar Relay</option>
                                }

                                @if (funcionario.Funcionario.Permisos.Find(e => (e.Nombre == "CrearTokensRecargasTecnicas" && e.Estado != true)) == null)
                                {
                                    <option value="RecargaElectricidad">Recarga técnica</option>
                                }

                                @if (funcionario.Funcionario.Permisos.Find(e => (e.Nombre == "CrearTokensCambioTid" && e.Estado == true)) != null)
                                {
                                    <option value="CambioClavesTID">Cambio de llaves TidRollover</option>
                                }
                                
                               

                            </select>



                        </div>




                        <div id="GenerarTokens" class="col-lg-12 col-md-12 display-none mg-top-20px">

                            <button id="botonGenerarTokens" type="button" disabled onclick="generarTokens()" class="btn-lg btn btn-lemon-green w-100">Generar tokens </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> *@
    <script src="~/js/jquery-3.6.0.min.js" asp-append-version="true"></script>

    @* <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script> *@
    <script src="~/js/jquery.dataTables.min.js" asp-append-version="true"></script>

    @* <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script> *@
    <script src="~/js/dataTables.bootstrap5.min.js" asp-append-version="true"></script>

    <!-- Responsive Extension JS -->
    @* <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script> *@
    <script src="~/js/dataTables.responsive.min.js" asp-append-version="true"></script>

    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script> *@
    <script src="~/js/chosen.jquery.min.js" asp-append-version="true"></script>

    <script src="~/js/xlsx.full.min.js" asp-append-version="true"></script>

    <script src="~/js/Views/Token/GeneracionMasiva.js" asp-append-version="true"></script>


    <script>
        var mensajeError = @Html.Raw(Json.Serialize(ViewData["MensajeError"]));
    </script>


</body>
</html>
